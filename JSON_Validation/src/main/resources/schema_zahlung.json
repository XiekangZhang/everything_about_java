{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "JSON Schema Validation f√ºr ZahlungsAPI",
  "title": "ZahlungsAPI",
  "type": "object",
  "properties": {
    "zahlung": {
      "type": "object",
      "properties": {
        "zahlungsmethode": {
          "type": "array",
          "maxItems": 2,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "zahlungsempfaenger": {
                "$comment": "Wer wird die Zahlung belastet.",
                "type": "string",
                "enum": [
                  "Kunde",
                  "Geschaeft"
                ]
              },
              "verwendungszweck": {
                "type": "string"
              },
              "zahlungsweise": {
                "type": "string",
                "enum": [
                  "Bankeinzug",
                  "PayPal",
                  "Bar",
                  "Kryptowaehrung"
                ]
              }
            },
            "dependencies": {
              "zahlungsempfaenger": [
                "zahlungsweise"
              ],
              "zahlungsweise": [
                "zahlungsempfaenger"
              ]
            },
            "if": {
              "properties": {
                "zahlungsweise": {
                  "type": "string",
                  "const": "Bankeinzug"
                }
              }
            },
            "then": {
              "properties": {
                "zahlungsdetails": {
                  "type": "array",
                  "uniqueItems": true,
                  "minItems": 2,
                  "maxItems": 2,
                  "items": {
                    "type": "object",
                    "properties": {
                      "attribute": {
                        "enum": [
                          "KontoInhaber",
                          "IBAN"
                        ]
                      }
                    },
                    "if": {
                      "properties": {
                        "attribute": {
                          "const": "IBAN"
                        }
                      }
                    },
                    "then": {
                      "properties": {
                        "wert": {
                          "type": "string",
                          "pattern": "^([A-Z]{2}[ \\-]?[0-9]{2})(?=(?:[ \\-]?[A-Z0-9]){9,30}$)((?:[ \\-]?[A-Z0-9]{3,5}){2,7})([ \\-]?[A-Z0-9]{1,3})?$"
                        }
                      },
                      "required": [
                        "wert"
                      ]
                    }
                  }
                }
              },
              "required": [
                "zahlungsdetails"
              ]
            },
            "else": {
              "if": {
                "properties": {
                  "zahlungsweise": {
                    "type": "string",
                    "const": "PayPal"
                  }
                }
              },
              "then": {
                "properties": {
                  "zahlungsdetails": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 1,
                    "items": {
                      "type": "object",
                      "properties": {
                        "attribute": {
                          "type": "string",
                          "const": "PayPal"
                        },
                        "wert": {
                          "type": "string",
                          "format": "email"
                        }
                      },
                      "required": [
                        "attribute",
                        "wert"
                      ]
                    }
                  }
                }
              },
              "else": {
                "if": {
                  "properties": {
                    "zahlungsweise": {
                      "type": "string",
                      "const": "Kryptowaehrung"
                    }
                  }
                },
                "then": {
                  "properties": {
                    "zahlungsdetails": {
                      "type": "array",
                      "minItems": 1,
                      "maxItems": 1,
                      "items": {
                        "type": "object",
                        "properties": {
                          "attribute": {
                            "type": "string",
                            "const": "KryptowaehrungsId"
                          },
                          "wert": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "attribute",
                          "wert"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "abschlag": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "betrag": {
                "type": "number"
              },
              "waehrung": {
                "type": "string",
                "default": "EURO"
              },
              "frist": {
                "type": "string",
                "default": "MONAT"
              },
              "faelligkeitsdatum": {
                "type": "string",
                "format": "date"
              },
              "buchungsdatum": {
                "type": "string",
                "format": "date"
              },
              "status": {
                "type": "string",
                "enum": [
                  "bezahlt",
                  "ausstehende"
                ]
              }
            },
            "required": [
              "betrag",
              "faelligkeitsdatum"
            ]
          }
        },
        "zahlungsSonstigeAttribute": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "attribute": {
                "type": "string"
              },
              "wert": {
                "type": [
                  "string",
                  "number"
                ]
              }
            }
          }
        }
      },
      "required": [
        "abschlag"
      ]
    }
  },
  "required": [
    "zahlung"
  ],
  "additionalProperties": false
}