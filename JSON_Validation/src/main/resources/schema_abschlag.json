{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "JSON Schema Validation f√ºr ZahlungsAPI",
  "title": "Zahlungs API",
  "type": "object",
  "properties": {
    "abschlag": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "betrag": {
            "type": "number"
          },
          "mwStSatz": {
            "type": "number"
          },
          "waehrung": {
            "type": "string",
            "default": "EUR"
          },
          "frist": {
            "type": "string",
            "default": "MONAT"
          },
          "faelligkeitsdatum": {
            "type": "string",
            "format": "date"
          },
          "buchungsdatum": {
            "type": "string",
            "format": "date"
          },
          "status": {
            "type": "string",
            "enum": [
              "BEZAHLT",
              "AUSSTEHENDE"
            ]
          }
        },
        "required": [
          "betrag",
          "faelligkeitsdatum"
        ]
      }
    }
  },
  "required": [
    "abschlag"
  ],
  "additionalProperties": false
}
