    "vertragSonstigeAttribute": {
      "type": "array",
      "minItems": 2,
      "allOf": [
        {
          "contains": {
            "type": "object",
            "properties": {
              "attribute": {
                "type": "string",
                "const": "abrechnungsgruppenId"
              }
            },
            "required": [
              "attribute"
            ]
